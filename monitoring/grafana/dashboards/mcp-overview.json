{
  "dashboard": {
    "id": null,
    "title": "MCP System Overview",
    "tags": ["mcp", "overview", "system", "health"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Health Status",
        "type": "stat",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "up{job=~\"mcp-services|frontend|llm-.*|rabbitmq|postgres|redis\"}",
            "legendFormat": "{{job}} - {{instance}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": ".*" },
              "properties": [
                { "id": "mappings", "value": [
                  { "options": { "0": { "text": "DOWN", "color": "red" } } },
                  { "options": { "1": { "text": "UP", "color": "green" } } }
                ]}
              ]
            }
          ]
        }
      },
      {
        "id": 2,
        "title": "Service Response Times",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=~\"mcp-services|frontend\"}[5m]))",
            "legendFormat": "{{job}} - P95 Response Time",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "thresholds": [
          {
            "value": 2,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rates",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"4..|5..\"}[5m])",
            "legendFormat": "{{job}} - Error Rate",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Resource Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage - {{instance}}",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage - {{instance}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Usage (%)",
            "min": 0,
            "max": 100
          }
        ],
        "thresholds": [
          {
            "value": 80,
            "colorMode": "warning",
            "op": "gt"
          },
          {
            "value": 90,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 5,
        "title": "Message Queue Status",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "rabbitmq_up",
            "legendFormat": "RabbitMQ Status",
            "refId": "A"
          },
          {
            "expr": "sum(rabbitmq_queue_messages)",
            "legendFormat": "Total Messages",
            "refId": "B"
          },
          {
            "expr": "sum(rabbitmq_queue_consumers)",
            "legendFormat": "Active Consumers",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1000 },
                { "color": "red", "value": 5000 }
              ]
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "RabbitMQ Status" },
              "properties": [
                { "id": "mappings", "value": [
                  { "options": { "0": { "text": "DOWN", "color": "red" } } },
                  { "options": { "1": { "text": "UP", "color": "green" } } }
                ]}
              ]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Database Status",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "pg_up",
            "legendFormat": "PostgreSQL Status",
            "refId": "A"
          },
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active Connections",
            "refId": "B"
          },
          {
            "expr": "redis_up",
            "legendFormat": "Redis Status",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 50 },
                { "color": "red", "value": 100 }
              ]
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "PostgreSQL Status" },
              "properties": [
                { "id": "mappings", "value": [
                  { "options": { "0": { "text": "DOWN", "color": "red" } } },
                  { "options": { "1": { "text": "UP", "color": "green" } } }
                ]}
              ]
            },
            {
              "matcher": { "id": "byName", "options": "Redis Status" },
              "properties": [
                { "id": "mappings", "value": [
                  { "options": { "0": { "text": "DOWN", "color": "red" } } },
                  { "options": { "1": { "text": "UP", "color": "green" } } }
                ]}
              ]
            }
          ]
        }
      },
      {
        "id": 7,
        "title": "Active Workflows",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "mcp_workflows_active_total",
            "legendFormat": "Active Workflows",
            "refId": "A"
          },
          {
            "expr": "mcp_workflows_completed_total",
            "legendFormat": "Completed Workflows",
            "refId": "B"
          },
          {
            "expr": "mcp_workflows_failed_total",
            "legendFormat": "Failed Workflows",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Critical Alerts",
        "type": "table",
        "gridPos": { "h": 10, "w": 24, "x": 0, "y": 32 },
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\", severity=~\"critical|warning\"}",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true
              },
              "indexByName": {
                "alertname": 0,
                "severity": 1,
                "alertstate": 2,
                "description": 3
              },
              "renameByName": {
                "alertname": "Alert Name",
                "severity": "Severity",
                "alertstate": "State",
                "description": "Description"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "color-background"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Severity" },
              "properties": [
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      { "color": "green", "value": null },
                      { "color": "yellow", "value": "warning" },
                      { "color": "red", "value": "critical" }
                    ]
                  }
                }
              ]
            }
          ]
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "custom",
          "options": [
            { "text": "Production", "value": "prod" },
            { "text": "Development", "value": "dev" }
          ],
          "current": { "text": "Production", "value": "prod" }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(up[5m]) > 0",
          "iconColor": "blue",
          "titleFormat": "Service Restart: {{job}}"
        },
        {
          "name": "Critical Alerts",
          "datasource": "Prometheus",
          "expr": "ALERTS{alertstate=\"firing\", severity=\"critical\"}",
          "iconColor": "red",
          "titleFormat": "CRITICAL: {{alertname}}"
        }
      ]
    }
  }
}
